<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimaryDark"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/photo_placeholder" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/article_title_padding_left"
            android:paddingTop="@dimen/article_title_padding_top"
            android:paddingRight="@dimen/article_title_padding_right"
            android:paddingBottom="@dimen/article_title_padding_bottom"
            android:textColor="?colorAccent"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="3" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/article_subtitle_padding_left"
            android:paddingRight="@dimen/article_subtitle_padding_right"
            android:textStyle="italic"
            android:paddingBottom="@dimen/article_subtitle_padding_bottom"
            android:textColor="@android:color/white"
            android:maxLines="2"
            android:ellipsize="end" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
